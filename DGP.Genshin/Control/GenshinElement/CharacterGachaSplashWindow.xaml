<Window x:Class="DGP.Genshin.Control.GenshinElement.CharacterGachaSplashWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:ui="http://schemas.modernwpf.com/2019"
        xmlns:cachedimage="clr-namespace:DGP.Genshin.Control.Infrastructure.CachedImage"
        mc:Ignorable="d"
        ui:WindowHelper.UseModernWindowStyle="True"
        ui:TitleBar.ExtendViewIntoTitleBar="True"
        Height="576" Width="1024" ResizeMode="NoResize"
        WindowStartupLocation="CenterOwner"
        ui:TitleBar.Style="{DynamicResource AppTitleBarStyle}"
        Background="{DynamicResource SystemControlPageBackgroundChromeLowBrush}">
    <Grid>
        <Grid.Background>
            <ImageBrush ImageSource="pack://application:,,,/DGP.Genshin;component/Resources/UI_GachaSettlement_Bg2.png"/>
        </Grid.Background>
        <cachedimage:CachedImage HorizontalAlignment="Center" ImageUrl="{Binding Source}"/>
    </Grid>
</Window>
