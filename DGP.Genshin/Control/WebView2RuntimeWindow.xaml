<Window x:Class="DGP.Genshin.Control.WebView2RuntimeWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DGP.Genshin.Control"
        xmlns:ui="http://schemas.modernwpf.com/2019"
        xmlns:wu="clr-namespace:WPFUI.Controls;assembly=WPFUI"
        ui:WindowHelper.UseModernWindowStyle="True"
        ui:TitleBar.ExtendViewIntoTitleBar="True"
        mc:Ignorable="d"
        Title="WebView2RuntimeWindow" Height="280" Width="400"
        Background="{DynamicResource SystemControlPageBackgroundChromeLowBrush}">
    <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Margin="36">
        <TextBlock Text="在继续使用该功能前&#10;你首先需要安装&#10;WebView2运行时" TextAlignment="Center" Style="{StaticResource SubtitleTextBlockStyle}"/>
        <wu:Hyperlink Content="前往获取" Padding="4" Margin="0,12,0,0" HorizontalAlignment="Center"
                      NavigateUri="https://go.microsoft.com/fwlink/p/?LinkId=2124703" />
        <TextBlock Text="安装完成后需要重新启动&#10;Snap Genshin" TextAlignment="Center" Margin="0,24,0,0" Style="{StaticResource BodyTextBlockStyle}"/>
    </StackPanel>
</Window>
