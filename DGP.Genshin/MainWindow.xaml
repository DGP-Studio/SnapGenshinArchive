                </ui:NavigationViewItem>
                
                <ui:NavigationViewItemHeader Content="网页" Visibility="Collapsed"/>
                <ui:NavigationViewItem Content="自定义网页" helpers:NavHelper.NavigateTo="{x:Type pages:WebViewLobbyPage}">
