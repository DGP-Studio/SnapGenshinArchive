                        <ui:FontIcon Glyph="&#xE774;"/>
                    </ui:NavigationViewItem.Icon>
                </ui:NavigationViewItem>
                
                <ui:NavigationViewItemHeader Content="插件"/>
                <ui:NavigationViewItem Content="插件管理" helpers:NavHelper.NavigateTo="{x:Type pages:PluginPage}">
                    <ui:NavigationViewItem.Icon>
                        <ui:FontIcon Glyph="&#xEA86;"/>
