                    <ui:NavigationViewItem.Icon>
                        <ui:BitmapIcon d:UriSource="D:\\Develop/Projects/Snap.Genshin/DGP.Genshin/Resources/UI_BagTabIcon_Avatar.png" 
                                       UriSource="pack://application:,,,/Resources/UI_BagTabIcon_Avatar.png"/>
                    </ui:NavigationViewItem.Icon>
                </ui:NavigationViewItem>
                <ui:NavigationViewItem Content="武器资料" helpers:NavHelper.NavigateTo="{x:Type pages:WeaponPage}">
