                                                Text="{Binding Name}"
                                                Style="{StaticResource BaseTextBlockStyle}"
                                                Grid.Row="1"
                                                Margin="0,6,0,0"
                                                HorizontalAlignment="Center"
                                                TextTrimming="CharacterEllipsis"/>
                                        </Grid>
                                        <!-- IEnumerable<NamedValue<Rate<IEnumerable<Item<int>>>>> -->
