                                                <ItemsPanelTemplate>
                                                    <UniformGrid Columns="8" SnapsToDevicePixels="True"/>
                                                </ItemsPanelTemplate>
                                            </ItemsControl.ItemsPanel>
                                            <ItemsControl.ItemTemplate>
                                                <DataTemplate>
                                                    <Grid Margin="0,0,0,0">
                                                        <Grid.ColumnDefinitions>
                                                            <ColumnDefinition Width="auto"/>
                                                            <ColumnDefinition />
                                                        </Grid.ColumnDefinitions>
                                                        <Rectangle
                                                            Width="1"
                                                            Fill="{StaticResource SystemControlForegroundBaseMediumLowBrush}"/>
                                                        <!-- NamedValue<Rate<IEnumerable<Item<int>>>> -->
                                                        <Grid Grid.Column="1">
                                                            <Grid.RowDefinitions>
                                                                <RowDefinition/>
                                                                <RowDefinition Height="auto"/>
                                                                <RowDefinition Height="auto"/>
                                                            </Grid.RowDefinitions>
                                                            <!-- IEnumerable<Item<int>> -->
                                                            <ItemsControl
                                                                ItemsSource="{Binding Value.Id}"
                                                                ItemsPanel="{StaticResource HorizontalStackPanelItemsPanel}"
                                                                HorizontalAlignment="Center"
                                                                VerticalAlignment="Center">
                                                                <ItemsControl.ItemTemplate>
                                                                    <!-- Item<int> -->
                                                                    <DataTemplate>
                                                                        <cachedimage:CachedImage
